{
  "name": "loadeer",
  "version": "1.3.0",
  "description": "Tiny, performant, SEO-friendly lazy loading library",
  "keywords": [
    "lazy-loading",
    "lazyloading",
    "lazy",
    "observer",
    "lozad.js",
    "lozad"
  ],
  "homepage": "https://github.com/johannschopplich/loadeer#readme",
  "bugs": {
    "url": "https://github.com/johannschopplich/loadeer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/loadeer.git"
  },
  "license": "MIT",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "exports": "./dist/loadeer.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "esno scripts/release.ts",
    "prepublishOnly": "tsc --noEmit && npm run build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@types/node": "^17.0.9",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "esno": "^0.14.0",
    "execa": "^6.0.0",
    "lint-staged": "^12.1.7",
    "minimist": "^1.2.5",
    "picocolors": "^1.0.0",
    "prettier": "2.5.1",
    "prompts": "^2.4.2",
    "semver": "^7.3.5",
    "simple-git-hooks": "^2.7.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.12"
  }
}
